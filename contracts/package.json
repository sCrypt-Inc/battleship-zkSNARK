{
  "name": "snark-verifier",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf scrypt.index.json && rimraf dist && rimraf scrypts",
    "pretest": "npm run build",
    "apply-optim": "sh optimizations/apply_asm_optim.sh",
    "compile": "npm run build && npm run apply-optim && npx ts-node compile.ts",
    "test": "npm run apply-optim && mocha 'dist/tests/**/*.test.js' --timeout 1200000"
  },
  "dependencies": {
    "scrypt-ts": "beta"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.10",
    "chai": "^4.3.6",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "typescript": "=4.8.4",
    "scryptlib": "^2.1.12"
  }
}
